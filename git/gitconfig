[core]
	editor = nvim
	excludesfile = /home/mike/.gitignore_global
[color]
	ui = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan
[alias]
	lg = "log --graph --decorate --pretty=oneline --abbrev-commit --all"
	lol = "log --graph --decorate --pretty=format:'%C(yellow)%h%Creset %C(yellow)%d%Creset %s %Cgreen(%cd) %Creset' --abbrev-commit --date=local --all"
	tracked = "ls-files --error-unmatch"
	unadd = "reset HEAD"
	pushall = "push -u origin --all"
	dt = difftool
	vd = difftool
	diff = "diff --check"
    istracked = "ls-files --error-unmatch"
[diff]
	tool = vimdiff
[merge]
	tool = vimdiff
[push]
	default = simple
[gist]
	home = /home/mike/work/gists/

[difftool]
	prompt = false

