source ~/.mutt/muttdefault

# sending mail
set from =  "mdlerch@gmail.com"
set smtp_url = "smtp://mdlerch@smtp.gmail.com:587/"
alternates lerch@math.montana.edu michael.lerch@msu.montana.edu
source ~/.mutt/gmailpass.muttrc

# receiving mail
set mbox_type = Maildir
set folder = $HOME/mail/mdlerch
set spoolfile = +/INBOX/
set header_cache = $HOME/mail/cache/

# writing mail
set text_flowed
set query_command="goobook query '%s'"
bind editor <Tab> complete-query
set editor = "vim --cmd 'let g:goobookrc=\"/home/mike/.goobookrc\"' +:1"
set postponed = +/drafts/

# misc
set timeout = 30
macro generic ,1 ":set from=mdlerch@gmail.com"
macro generic ,2 ":set from=lerch@math.montana.edu"
macro generic ,3 ":set from=michael.lerch@montana.edu"


# vim:set ft=muttrc:
